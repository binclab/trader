{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Configure",
			"command": "/usr/bin/meson",
			"args": [
				"setup",
				".build"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				{
					"base": "$gcc",
					"fileLocation": [
						"relative",
						"${workspaceFolder}",
					]
				}
			],
			"group": "none"
		},
		{
			"type": "shell",
			"label": "Build",
			"command": "/usr/bin/ninja",
			"args": [
				"-C", ".build"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				{
					"base": "$gcc",
					"fileLocation": [
						"relative",
						"${workspaceFolder}/terminal",
					]
				}
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
	],
}